@CHARSET "UTF-8";
.account_leftMenu{ width:auto; height:auto;background-color:#fff; overflow:hidden;}
.account_leftMenu .title{ height:40px; line-height:40px; border-bottom:3px solid #58749c; padding-left:10px; font-size:14px;}

.account_leftMenu ul{ width:100%; height:auto; }
.account_leftMenu ul li{ width:100%; height:40px; text-align:center; line-height:40px;}
.account_leftMenu ul li a{ float:left; width:99%; height:40px; line-height:40px; text-align:center;}
.account_leftMenu ul li a:hover{ background-color:#ececec; text-decoration:none;}